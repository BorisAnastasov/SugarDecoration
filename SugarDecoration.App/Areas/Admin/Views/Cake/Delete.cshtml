@model DeleteCakeViewModel

@{
    ViewBag.Title = "Изтриване на тази торта";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div style="color:black;" class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <p class="mb-0"><strong>Създадена на:</strong> @Model.CreatedOn</p>
                <p class="text-danger mt-3">"Сигурни ли сте, че искате да изтриете тази торта?"</p>
            </div>
            <div class="card-footer">
                <form asp-area="Admin" asp-controller="Cake" asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                    <a asp-area=""  asp-controller="Cake" asp-action="All" class="btn btn-secondary">Назад</a>
                </form>
            </div>
        </div>
    </div>
</div>




