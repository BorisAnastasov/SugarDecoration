@model CartItemFormModel

@{
    ViewData["Title"] = "Промени поръчка";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.IsRefToProduct())
            {
                <div class="form-group">
                    <label asp-for="ProductTitle" class="control-label">Име на продукта</label>
                    <input asp-for="ProductTitle" class="form-control" />
                    <span asp-validation-for="ProductTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Линк към изображение</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Text" class="control-label">Текст</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Телефонен номер</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Брой</label>
                <input asp-for="Quantity" class="form-control" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
            <input asp-for="Id" class="form-control d-none" />
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}