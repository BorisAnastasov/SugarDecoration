@model int

@{
    ViewBag.Title = "Изтриване на количката";
    int id = Model;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="text-danger mt-3">"Сигурни ли сте, че искате да изтриете количката?"</p>
            </div>
            <div class="card-footer">
                <form asp-area="" asp-controller="Cart" asp-action="DeleteConfirmedCart" method="post">
                    <input asp-route-id="@id" class="d-none"/>
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                    <a asp-area="" asp-controller="Cart" asp-action="All" class="btn btn-secondary">Назад</a>
                </form>
            </div>
        </div>
    </div>
</div>


