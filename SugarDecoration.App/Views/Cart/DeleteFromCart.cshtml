@model int

@{
    ViewBag.Title = "Изтриване на продукт";
    int id = Model;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="text-danger mt-3">"Сигурни ли сте, че искате да изтриете този продукт от количката ви?"</p>
            </div>
            <div class="card-footer">
                <form asp-controller="Cart" asp-action="DeleteConfirmedFromCart" method="post">
                    <input type="hidden" asp-for="@id" />
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                    <a asp-controller="Cart" asp-action="All" class="btn btn-secondary">Назад</a>
                </form>
            </div>
        </div>
    </div>
</div>

