@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;

@inject SignInManager<ApplicationUser> signManager
@inject UserManager<ApplicationUser> userManager
@inject IApplicationUserService user

<ul class="navbar-nav">
    @if (signManager.IsSignedIn(User))
{
        <li class="nav-item">
            @if (await user.UserFullName(User.Id()) is var fullName && fullName != null)
            {
                <a class="nav-link text-white">Hello, @fullName</a>
            }
            else
            {
                <a class="nav-link text-white">Hello, @User.Identity.Name!</a>
            }
        </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
