@model AllCakeQueryModel
@{
	ViewBag.Title = "All Cakes";
}

<div class="container py-5">
	<h1 class="text-center">@ViewBag.Title</h1>
	<div class="row row-cols-1 row-cols-md-3 g-4 py-5">
		@foreach (var cake in Model.Cakes)
		{
			<div class="col">
				<div class="card">
					<img src="@cake.ImageUrl" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">@cake.Title</h5>
					</div>
					<div class="mb-5 d-flex justify-content-around">
						<a asp-controller="Cake" asp-action="CakeDetails" asp-route-id="@cake.Id" style="width:70%;" class="btn btn-primary">Details</a>

					</div>
					@if ()
					{
						@*
				<div class="card-body">
				<a asp-controller="Cake" asp-action="DeleteCake" asp-route-id="@cake.Id" class="btn btn-primary btn-delete">Delete</a>
				<a asp-controller="Cake" asp-action="EditCake" asp-route-id="@cake.Id" class="btn btn-primary">Edit</a>
				</div> *@
					}
				</div>
			</div>
		}
	</div>
</div>


<style>
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	body {
		background-color: #f9f6f2;
	}

	.card-img-top {
		border-radius: 50px;
		padding: 20px;
	}

	.card {
		border-radius: 30px;
		box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 2px 0px;
	}

	.card-body {
		padding: 25px;
		margin-top: -15px;
	}

	.btn-primary {
		border-radius: 50px;
		width: 120px;
	}

		.btn-primary:hover {
			background-color: black;
			border: none;
		}

	.btn-delete {
		background-color: red;
		border-color: red;
	}

	h3, h5 {
		text-align: center;
		color: rgb(0, 91, 228);
	}
</style>

