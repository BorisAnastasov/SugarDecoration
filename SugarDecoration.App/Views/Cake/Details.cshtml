@model CakeDetailsModel
@{
	ViewBag.Title = "Details about the cake";
}

<div class="container">
    <div class="row g-5 justify-content-evenly">
        <div class="col-lg-6">
            <div class="card ">
                <div class="row g-0">
                    <div class="col-6 col-md-5">
                        <img src="@Model.ImageUrl" class="card-img img-fluid rounded-start" alt="@Model.Title" />
                    </div>
                    <div class="col-6 col-md-7">
                        <div class="card-body d-flex flex-column">
                            <div class="h-100">
                                <h1 class="card-title">@Model.Title</h1>
                                <h2 class="card-title">Details</h2>
                                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                                <p class="card-text"><strong>Layers:</strong> @Model.Layers</p>
                                <p class="card-text"><strong>Form:</strong> @Model.Form</p>
                                <p class="card-text"><strong>Portions:</strong> @Model.Portions</p>
                                <div class="actions">
                                    <button onclick="addToCart()">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-img{
        width:100%;
        height:100%;
        object-fit:cover;
        border-bottom-right-radius:0px;
    }

</style>