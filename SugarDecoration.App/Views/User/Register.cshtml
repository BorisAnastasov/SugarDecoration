@model RegisterViewModel
@{
	ViewData["Title"] = "Регистриране";
}


<section>
	<div class="container mt-5 pt-5 ">
		<div class="col-12 col-sm-7 col-md-6 m-auto">
			<div class="card border-0 shadow">
				<div class="card-body flex-basis-10%">
					<h1 class="text-center">@ViewData["Title"]</h1>
					<form asp-controller="User" asp-action ="Register"  method="post">
						<hr />
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-floating mb-3">
							<input asp-for="FirstName" class="form-control" aria-required="true" placeholder="example" />
							<label asp-for="FirstName">Име</label>
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="LastName" class="form-control" aria-required="true" placeholder="example" />
							<label asp-for="LastName">Фамилия</label>
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Email" class="form-control" aria-required="true" placeholder="example" />
							<label asp-for="Email">Емайл</label>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Password" class="form-control" aria-required="true" placeholder="example" />
							<label asp-for="Password">Парола</label>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="ConfirmPassword" class="form-control" placeholder="example" aria-required="true" />
							<label asp-for="ConfirmPassword">Повторете паролата си</label>
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="text-center mt-2">
							<button type="submit" class="btn btn-lg btn-primary">Регистрирай се</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
